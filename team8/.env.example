# ===== Team Gateway (only one exposed port; Nginx is gateway) =====
TEAM_PORT=8008

# ===== Core connection (document requirement) =====
URL_BASE_CORE=http://core:8000
CORE_BASE_URL=http://core:8000


# ===== MinIO admin (used by MinIO container) =====
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_REGION_NAME=us-east-1

# Auto-created bucket name/policy (recommended)
MINIO_BUCKET=team8-media
MINIO_BUCKET_POLICY=download

# ===== S3 settings used by YOUR APP (boto3) =====
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET=team8-media
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
S3_USE_SSL=false

TEAM8_POSTGRES_DB=team8_db
TEAM8_POSTGRES_USER=team8_user
TEAM8_POSTGRES_PASSWORD=team8_pass

URL_DATABASE_TEAM8=postgresql://team8_user:team8_pass@postgres:5432/team8_db

MINIO_IMAGE=quay.io/minio/minio:latest
